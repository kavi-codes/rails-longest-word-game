<div class="p-5 text-center m-3">
  <h1>New Game</h1>

  <div class="d-flex justify-content-around m-5"> <% @grid.each do |letter|%>
          <div class="py-3 px-4 text-center border rounded-circle letters"><%=letter%></div>
         <%end%>
  </div>

  <form action="/score" method="post" data-turbo="false" class="m-3">
    <!-- ... -->
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :grid, @grid %>
    <label for="guess" class="m-3">What is the longest word you can find?</label><br>
    <input type="text" name="answer" value="" class="my-3">
    <input type="submit" value="Play" class="my-3 game-btn">
  </form>
</div>
